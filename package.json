{
  "name": "project_name",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist/ && tsc",
    "start": "ts-node-dev --respawn --no-notify ./src/server.ts",
    "run-test-ts": "ts-node-dev --respawn --no-notify ./test.ts",
    "start-test": "ts-node-dev --respawn --no-notify ./src/server.ts",
    "migration:create": "cd src/db/migrations && migrate-mongo create",
    "migrate": "cd src/db/migrations/ && migrate-mongo up $( cd ../../../ && [ -f .env ] && cat .env | grep DB_URL || DB_URL='')",
    "migrate:down": "cd src/db/migrations/ && migrate-mongo down $( cd ../../../ && cat .env | grep DB_URL)",
    "seed": "ts-node-dev --no-notify src/db/seeds/index.ts --ignore-watch -- --$([ -f .env ] && cat .env | grep DB_URL || DB_URL='')",
    "seed-prod": "NODE_ENV=production ts-node-dev src/db/seeds/index.ts --ignore-watch -- --$([ -f .env ] && cat .env | grep DB_URL || DB_URL='')",
    "hardreset": "sh ./bin/hard-reset.sh",
    "test": "jest",
    "prepush": "sh ./bin/prepush.sh",
    "lint": "eslint --fix --max-warnings 0 --ext '.ts' --ignore-path .gitignore src",
    "build-image-prod": "docker build -f Dockerfile.prod -t project_name/api ."
  },
  "devDependencies": {
    "@types/express": "4.17.4",
    "@types/express-serve-static-core": "4.17.3",
    "@types/jest": "^24.0.19",
    "@types/lodash": "^4.14.149",
    "@types/mongodb": "^3.3.6",
    "@types/mongoose": "5.7.9",
    "@types/multer": "^1.3.10",
    "@types/node": "^12.11.1",
    "@types/swagger-jsdoc": "^3.0.2",
    "@types/swagger-ui-express": "^4.1.1",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-json": "^2.0.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.9",
    "jest": "^25.1.0",
    "migrate-mongo": "^6.0.2",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.0",
    "ts-jest": "^25.2.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@types/uuid": "^7.0.2",
    "axios": "^0.19.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.3.0",
    "lodash": "^4.17.15",
    "mongoose": "5.9.7",
    "swagger-jsdoc": "^3.4.0",
    "swagger-ui-express": "^4.1.2",
    "ts-node": "8.5.4",
    "uuid": "^7.0.2",
    "winston": "^3.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && npm run lint",
      "pre-push": "npm run prepush"
    }
  },
  "jest": {
    "testEnvironment": "node"
  }
}
